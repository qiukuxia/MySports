        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/CLR_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
